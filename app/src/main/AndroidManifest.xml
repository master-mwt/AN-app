<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.univaq.disim.mwt.trakd">
    <!-- PERMISSIONS -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- ACTIVITIES -->
        <activity android:name="it.univaq.disim.mwt.trakd.ExploreActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="it.univaq.disim.mwt.trakd.SearchActivity" />
        <activity android:name="it.univaq.disim.mwt.trakd.TvShowDetailsActivity" />
        <activity android:name="it.univaq.disim.mwt.trakd.UserCollectionActivity" />
        <activity android:name="it.univaq.disim.mwt.trakd.SeasonActivity" />
        <activity android:name="it.univaq.disim.mwt.trakd.EpisodeActivity" />
        <activity android:name="it.univaq.disim.mwt.trakd.SettingsActivity" />
        <activity android:name="it.univaq.disim.mwt.trakd.AuthActivity" />
        <activity android:name="it.univaq.disim.mwt.trakd.InfoActivity" />
        <activity android:name="it.univaq.disim.mwt.trakd.AuthSignUpActivity" />
        <activity android:name="it.univaq.disim.mwt.trakd.AuthSignInActivity" />

        <!-- SERVICES -->
        <service android:name="it.univaq.disim.mwt.trakd.services.DataParserService" />
        <service android:name="it.univaq.disim.mwt.trakd.services.UserCollectionService" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>